@model List<ContatoModel>
@{
    ViewData["Title"] = "Listagem de Contatos";
}
<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="ContatoController1" asp-action="Criar">Adicionar novo contato</a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <h1 class="display-4">Listagem de contatos</h1>
    <br />

    <table class="table" id="table-contatos">
        <thead>
            <tr>
                <th scope="col" style="text-align:center">#</th>
                <th scope="col" style="text-align:center">Nome</th>
                <th scope="col" style="text-align:center">Celular</th>
                <th scope="col" style="text-align:center">Email</th>
                <th scope="col" style="text-align:center"></th>


            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ContatoModel contato in Model)
                {
                    <tr>
                        <th scope="row">@contato.Id</th>
                        <td>@contato.Nome</td>
                        <td>@contato.Celular</td>
                        <td>@contato.Email</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@contato.Id" asp-controller="ContatoController1" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@contato.Id" asp-controller="ContatoController1" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>

                }
            }
            else
            {
                <tr class="odd"><td valing="top" colspan="5">Nenhum contato encontrado</td> </tr>
            }


        </tbody>
    </table>

</div>